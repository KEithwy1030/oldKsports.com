:8080 {
    root * /usr/share/caddy
    
    # API路由转发到后端
    @api {
        path /api/*
    }
    reverse_proxy @api https://oldksports-app.zeabur.app {
        transport http {
            tls_insecure_skip_verify
        }
    }
    
    # SPA路由：所有其他请求返回index.html
    try_files {path} /index.html
    file_server
}

