{
  "name": "oldksports-production",
  "services": [
    {
      "name": "frontend",
      "source": {
        "type": "git",
        "rootDir": "client"
      },
      "build": {
        "commands": ["npm install", "npm run build"]
      },
      "deploy": {
        "type": "static",
        "outputDir": "dist"
      },
      "env": {
        "NODE_ENV": "production",
        "VITE_API_URL": "https://oldksports-backend.zeabur.app/api"
      }
    },
    {
      "name": "backend",
      "source": {
        "type": "git",
        "rootDir": "server"
      },
      "build": {
        "commands": ["npm install --production"]
      },
      "deploy": {
        "type": "node",
        "startCommand": "npm start"
      },
      "env": {
        "NODE_ENV": "production",
        "PORT": "8080",
        "CORS_ORIGIN": "https://oldksports.zeabur.app",
        "MYSQL_HOST": "mysql.zeabur.internal",
        "MYSQL_PORT": "3306",
        "MYSQL_USERNAME": "root",
        "MYSQL_PASSWORD": "",
        "MYSQL_DATABASE": "old_k_sports",
        "JWT_SECRET": ""
      }
    }
  ]
}