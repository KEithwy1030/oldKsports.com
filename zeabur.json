{
  "name": "oldksports-production",
  "services": [
    {
      "name": "frontend",
      "source": {
        "type": "git",
        "rootDir": "client"
      },
      "deploy": {
        "type": "docker",
        "dockerfile": "Dockerfile"
      },
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "backend",
      "source": {
        "type": "git",
        "rootDir": "server"
      },
      "deploy": {
        "type": "docker",
        "dockerfile": "Dockerfile"
      },
      "env": {
        "NODE_ENV": "production",
        "CORS_ORIGIN": "https://oldksports.com",
        "MYSQL_HOST": "${MYSQL_HOST}",
        "MYSQL_PORT": "3306",
        "MYSQL_USERNAME": "${MYSQL_USERNAME}",
        "MYSQL_PASSWORD": "${MYSQL_PASSWORD}",
        "MYSQL_DATABASE": "zeabur",
        "JWT_SECRET": "${JWT_SECRET}",
        "PORT": "8080"
      }
    }
  ]
}